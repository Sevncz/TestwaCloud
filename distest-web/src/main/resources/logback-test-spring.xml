<?xml version="1.0" encoding="UTF-8"?><configuration debug="true">    <include resource="org/springframework/boot/logging/logback/basic.xml" />    <!-- logback 日志载入在 spring properties 文件之前，会生成 LOG_PATH_IS_UNDEFINED 文件夹 -->    <!-- 在这里设置默认路径 -->    <property name="LOG_PATH" value="${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}}" />    <property name="CONSOLE_LOG_PATTERN"              value="%d{yyyy-MM-dd HH:mm:ss} %green(%-5level) --- [%thread] %magenta(%logger) : %msg%n"/>    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">            <pattern>${CONSOLE_LOG_PATTERN}</pattern>            <charset>UTF-8</charset>        </encoder>    </appender>    <!-- 按照每天生成日志文件 -->    <appender name="ERROR-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">        <append>true</append>        <!-- 过滤器，只记录 error 级别的日志 -->        <filter class="ch.qos.logback.classic.filter.LevelFilter">            <level>error</level>            <onMatch>ACCEPT</onMatch>            <onMismatch>DENY</onMismatch>        </filter>        <!-- 日志名称 -->        <file>${LOG_PATH}/distest-web/error.log</file>        <!-- 每天生成一个日志文件，保存 30 天的日志文件 -->        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <!--日志文件输出的文件名：按天回滚 daily -->            <FileNamePattern>${LOG_PATH}/distest-web/error.log.%d{yyyy-MM-dd}</FileNamePattern>            <!--日志文件保留天数-->            <MaxHistory>30</MaxHistory>        </rollingPolicy>        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">            <!--格式化输出：%d 表示日期，%thread 表示线程名，%-5level：级别从左显示 5 个字符宽度 %msg：日志消息，%n 是换行符-->            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>            <!-- 编码 -->            <charset>UTF-8</charset>        </encoder>    </appender>    <appender name="ROOT-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">        <append>true</append>        <filter class="ch.qos.logback.classic.filter.LevelFilter">            <level>INFO</level>            <onMatch>ACCEPT</onMatch>            <onMismatch>DENY</onMismatch>        </filter>        <file>${LOG_PATH}/distest-web/info.log</file>        <!-- 每天生成一个日志文件，保存 10 天的日志文件 -->        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <!--日志文件输出的文件名：按天回滚 daily -->            <FileNamePattern>${LOG_PATH}/distest-web/info.log.%d{yyyy-MM-dd}            </FileNamePattern>            <!--日志文件保留天数-->            <MaxHistory>10</MaxHistory>        </rollingPolicy>        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">            <!--格式化输出：%d 表示日期，%thread 表示线程名，%-5level：级别从左显示 5 个字符宽度 %msg：日志消息，%n 是换行符-->            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>            <!-- 编码 -->            <charset>UTF-8</charset>        </encoder>    </appender>    <logger name="com.testwa.distest" level="ERROR" additivity="false">        <appender-ref ref="STDOUT"/>        <appender-ref ref="ROOT-APPENDER"/>        <appender-ref ref="ERROR-APPENDER"/>    </logger>    <logger name="com.testwa.core" level="ERROR" additivity="false">        <appender-ref ref="STDOUT"/>        <appender-ref ref="ROOT-APPENDER"/>        <appender-ref ref="ERROR-APPENDER"/>    </logger>    <root level="ERROR">        <appender-ref ref="STDOUT"/>        <appender-ref ref="ROOT-APPENDER"/>        <appender-ref ref="ERROR-APPENDER"/>    </root></configuration>