<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.testwa.distest.server.mvc.mapper.TaskSceneMapper" >
    <resultMap id="BaseResultMap" type="com.testwa.distest.server.entity.TaskScene" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="taskName" property="taskName" jdbcType="VARCHAR" />
        <result column="projectId" property="projectId" jdbcType="BIGINT"/>
        <result column="appId" property="appId" jdbcType="BIGINT"/>
        <result column="description" property="description" jdbcType="VARCHAR" />
        <result column="exeMode" property="exeMode" jdbcType="TINYINT" typeHandler="com.testwa.distest.common.mybatis.EnumValueHandler"/>
        <result column="updateTime" property="updateTime" jdbcType="DATE" javaType="java.util.Date"/>
        <result column="createTime" property="createTime" jdbcType="DATE" javaType="java.util.Date"/>
        <result column="updateBy" property="updateBy" jdbcType="BIGINT"/>
        <result column="createBy" property="createBy" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List" >
        id, taskName, projectId, appId, description, exeMode,updateTime,createTime,updateBy,createBy
    </sql>

    <select id="findBy" parameterType="com.testwa.distest.server.entity.TaskScene" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM task_scene
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <if test="createBy != null">and createBy = #{createBy}</if>
            <if test="projectId != null">and projectId = #{projectId}</if>
            <if test="taskName != null">and taskName = #{taskName}</if>
        </trim>
    </select>

    <select id="findByFromProject" parameterType="java.util.Map" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM task_scene
        WHERE projectId in
        <foreach item="item" index="index" collection="params.projects" open="(" separator="," close=")">#{item.id} </foreach>
        <if test="params.taskName != null">and taskName = #{params.taskName}</if>
        <if test="params.createBy != null">and createBy = #{params.createBy}</if>
        <if test="params.projectId != null">and projectId = #{params.projectId}</if>
    </select>
    <select id="findAllOrder" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM task_scene
        WHERE id IN
        <foreach item="item" index="index" collection="testcaseId" open="(" separator="," close=")">#{item} </foreach>
        ORDER BY ${order}
    </select>

    <select id="countBy" resultType="long">
        SELECT count(1) c FROM task_scene
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <if test="createBy != null">and createBy = #{createBy}</if>
            <if test="projectId != null">and projectId = #{projectId}</if>
            <if test="taskName != null">and taskName = #{taskName}</if>
        </trim>
    </select>

</mapper>