<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.testwa.distest.server.mapper.ScriptMapper" >
    <resultMap id="BaseResultMap" type="com.testwa.distest.server.entity.Script" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="scriptName" property="scriptName" jdbcType="VARCHAR" />
        <result column="aliasName" property="aliasName" jdbcType="VARCHAR" />
        <result column="size" property="size" jdbcType="VARCHAR" />
        <result column="tag" property="tag" jdbcType="VARCHAR" />
        <result column="description" property="description" jdbcType="VARCHAR" />
        <result column="ln" property="ln" jdbcType="TINYINT" typeHandler="com.testwa.core.base.mybatis.EnumValueHandler"/>
        <result column="path" property="path" jdbcType="VARCHAR" />
        <result column="md5" property="md5" jdbcType="VARCHAR" />
        <result column="updateTime" property="updateTime" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
        <result column="createTime" property="createTime" jdbcType="TIMESTAMP" javaType="java.sql.Timestamp"/>
        <result column="updateBy" property="updateBy" jdbcType="BIGINT"/>
        <result column="createBy" property="createBy" jdbcType="BIGINT"/>
        <result column="enabled" property="enabled" jdbcType="BOOLEAN" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, scriptName, aliasName, size, tag, description, ln, path, md5, updateTime, createTime, updateBy, createBy, enabled
    </sql>
    <select id="findOne" parameterType="com.testwa.distest.server.entity.Script" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM script
        WHERE id = #{key}
    </select>
    <select id="findList" parameterType="com.testwa.distest.server.entity.Script" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM script
        <if test="keys != null">
            <trim prefix="WHERE" prefixOverrides="AND |OR ">
                id in
                <foreach item="id" index="index" collection="keys" open="(" separator="," close=")">#{id} </foreach>
            </trim>
        </if>
        <if test="orderBy != null">
            order by ${orderBy}
        </if>
    </select>

    <select id="findBy" parameterType="com.testwa.distest.server.entity.Script" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM script
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            enabled = 1
            <if test="createBy != null">and createBy = #{createBy}</if>
            <if test="projectId != null">and projectId = #{projectId}</if>
            <if test="scriptName != null">and scriptName = #{scriptName}</if>
        </trim>
    </select>

    <select id="findByFromProject" parameterType="java.util.Map" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM script
        WHERE enabled = 1
        AND projectId in
        <foreach item="item" index="index" collection="params.projects" open="(" separator="," close=")">#{item.id} </foreach>
        <if test="params.appName != null">and appName = #{params.appName}</if>
        <if test="params.userId != null">and userId = #{params.userId}</if>
        <if test="params.projectId != null">and projectId = #{params.projectId}</if>
    </select>

    <select id="findByFromTestcase" parameterType="Long" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM script s RIGHT JOIN testcase_script t on s.id = t.scriptId
        WHERE enabled = 1
        and t.testcaseId = #{testcaseId}
    </select>

</mapper>